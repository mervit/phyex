{% extends 'base.html.twig' %}

{% block title %}{% if category is defined %}{{ 'Edit exercise type category'|trans }} #{{ category.id }}{% else %}{{ 'New exercise type category'|trans }}{% endif %}{% endblock %}

{% block body %}
    <h1 class="mt-3 h2">{% if category is defined %}{{ 'Edit exercise type category'|trans }} #{{ category.id }}{% else %}{{ 'New exercise type category'|trans }}{% endif %}</h1>
    {{ form_start(form) }}
    <div class="row">
        <div class="col-12 col-md-6">
            {{ form_row(form.name) }}
            {{ form_row(form.global) }}
        </div>
        <div class="col-12 col-md-6">
            {{ form_row(form.exerciseTypes) }}
        </div>
    </div>

    {{ form_row(form.submit) }}
    {{ form_end(form) }}
{% endblock %}