<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{{ 'Register to APP'|trans }}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body id="login">

    <div class="container">

        <div class="row align-items-center vh-100">

            <div class="col-12 col-lg-8 offset-lg-2">

                <h1><i class="bi bi-clipboard-pulse"></i> PhyEx</h1>

                <div class="card mb-5">

                    <div class="card-header">
                        Register to APP
                    </div>

                    <div class="card-body">

                        {{ form_start(registrationForm) }}

                            <h2 class="h4">{{ 'Basic information'|trans }}</h2>

                            <div class="row">
                                <div class="col-md-6">
                                    {{ form_row(registrationForm.email) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(registrationForm.plainPassword, {
                                        label: 'Password'
                                    }) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    {{ form_row(registrationForm.birthYear) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(registrationForm.country) }}
                                </div>
                            </div>

                            <h2 class="h4">{{ 'Education'|trans }}</h2>

                            <h3 class="h5">{{ 'Completed education'|trans }}</h3>

                            {{ form_row(registrationForm.completedEducationLevel) }}

                            <div id="registration_form_completedEducationLevel_details" class="row">
                                <div class="col-md-6">
                                    {{ form_row(registrationForm.completedEducationUniversityName) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(registrationForm.completedEducationFacultyName) }}
                                </div>
                            </div>

                            <h3 class="h5">{{ 'Current ongoing study'|trans }}</h3>

                            {{ form_row(registrationForm.currentEducationLevel) }}

                            <div id="registration_form_currentEducationLevel_details">

                                <div class="row">
                                    <div class="col-md-6">
                                        {{ form_row(registrationForm.studyProgram) }}
                                    </div>
                                    <div class="col-md-6">
                                        {{ form_row(registrationForm.academicYear) }}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        {{ form_row(registrationForm.universityName) }}
                                    </div>
                                    <div class="col-md-6">
                                        {{ form_row(registrationForm.facultyName) }}
                                    </div>
                                </div>

                            </div>

                            <h2 class="h4">{{ 'Working experience'|trans }}</h2>

                            <div class="row">
                                <div class="col-md-6">
                                    {{ form_row(registrationForm.fieldOfExperience) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(registrationForm.yearsOfExperience) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    {{ form_row(registrationForm.currentJobTitle) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(registrationForm.favoriteMethod) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    {{ form_row(registrationForm.courseList) }}
                                </div>
                            </div>

                            <hr />

                            {{ form_row(registrationForm.stayInTouch) }}

                            {{ form_row(registrationForm.agreeTerms) }}

                            <hr />

                            <div class="row">
                                <div class="col-12 col-md-5 offset-md-2 order-md-1">
                                    <button class="btn btn-success w-100" type="submit">{{ 'Register'|trans }}</button>
                                </div>
                                <div class="col-12 col-md-5 order-md-0">
                                    <a href="{{ path('app_login') }}" class="btn btn-light w-100"><i class="bi bi-chevron-double-left"></i> {{ 'Login'|trans }}</a>
                                </div>
                            </div>

                        {{ form_end(registrationForm) }}

                    </div>

                </div>

            </div>

        </div>

    </div>

    <script type="text/javascript">

        const e = new Event("change");

        let el = document.getElementById("registration_form_completedEducationLevel");
        el.addEventListener("change", (event) => {
            if(event.target.value == '') {
                document.getElementById("registration_form_completedEducationLevel_details").classList.add('d-none');
            }else{
                document.getElementById("registration_form_completedEducationLevel_details").classList.remove('d-none');
            }
        });

        el.dispatchEvent(e);

        el = document.getElementById("registration_form_currentEducationLevel");

        el.addEventListener("change", (event) => {
            if(event.target.value == '') {
                document.getElementById("registration_form_currentEducationLevel_details").classList.add('d-none');
            }else{
                document.getElementById("registration_form_currentEducationLevel_details").classList.remove('d-none');
            }
        });

        el.dispatchEvent(e);

    </script>

</body>
</html>