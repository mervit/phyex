<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{{ 'Register to APP'|trans }}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body id="login">

<div class="container">

    <div class="row align-items-center vh-100">

        <div class="col-12 col-lg-8 offset-lg-2">

            <h1><i class="bi bi-clipboard-pulse"></i> PhyEx</h1>

            <div class="card mb-3">

                <div class="card-header">
                    Register to APP
                </div>

                <div class="card-body">

                    {{ form_start(registrationForm) }}

                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(registrationForm.email) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(registrationForm.plainPassword, {
                                    label: 'Password'
                                }) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(registrationForm.birthYear) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(registrationForm.yearsOfExperience) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(registrationForm.student) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(registrationForm.currentEducationLevel) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(registrationForm.academicYear) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(registrationForm.universityName) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(registrationForm.facultyName) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(registrationForm.studyProgram) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(registrationForm.fieldOfExperience) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(registrationForm.country) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(registrationForm.courseList) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(registrationForm.favoriteMethod) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(registrationForm.stayInTouch) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(registrationForm.currentJobTitle) }}
                            </div>
                        </div>

                        {{ form_row(registrationForm.agreeTerms) }}

                        <div class="row">
                            <div class="col-12 col-md-5 offset-md-2 order-md-1">
                                <button class="btn btn-success w-100" type="submit">{{ 'Register'|trans }}</button>
                            </div>
                            <div class="col-12 col-md-5 order-md-0">
                                <a href="{{ path('app_login') }}" class="btn btn-light w-100"><i class="bi bi-chevron-double-left"></i> {{ 'Login'|trans }}</a>
                            </div>
                        </div>

                    {{ form_end(registrationForm) }}

                </div>

            </div>

        </div>

    </div>

</div>

</body>
</html>