<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{{ 'Register to APP'|trans }}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body id="login">

<div class="container">

    <div class="row align-items-center vh-100">

        <div class="col-12 col-md-6 offset-md-3 col-lg-4 offset-lg-4 ">

            <h1><i class="bi bi-clipboard-pulse"></i> PhyEx</h1>

            <div class="card">

                <div class="card-header">
                    Register to APP
                </div>

                <div class="card-body">

                    {{ form_start(registrationForm) }}

                        {{ form_row(registrationForm.email) }}

                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Password'
                        }) }}

                        {{ form_row(registrationForm.agreeTerms) }}

                        <div class="row">
                            <div class="col-12 col-md-5 offset-md-2 order-md-1">
                                <button class="btn btn-success w-100" type="submit">{{ 'Register'|trans }}</button>
                            </div>
                            <div class="col-12 col-md-5 order-md-0">
                                <a href="{{ path('app_login') }}" class="btn btn-primary w-100">{{ 'Login'|trans }}</a>
                            </div>
                        </div>

                    {{ form_end(registrationForm) }}

                </div>

            </div>

        </div>

    </div>

</div>

</body>
</html>